{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: clang++ build all",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=gnu++14",
        "-g",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}/main"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
