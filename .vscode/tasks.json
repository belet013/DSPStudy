{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current cpp",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": ["-std=c++17","-g","${relativeFile}","-o","${fileDirname}/${fileBasenameNoExtension}"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"]
    }
  ]
}
