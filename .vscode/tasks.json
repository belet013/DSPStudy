{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "clang++",
      "args": ["-std=c++20", "-O2", "-g", "main.cpp", "-o", "a.out"],
      "problemMatcher": "$gcc"
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${workspaceFolder}/a.out"
    }
  ]
}
