{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (clang++) current folder",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "clang++ -std=gnu++14 -g *.cpp -o main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
